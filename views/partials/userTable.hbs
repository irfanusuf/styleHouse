



<div class="container table-responsive mt-5">
      <div class="h1"> User Details </div>
      <table
        class="table table-striped table-bordered table-hover  table-responsive-sm"
      >
        <thead>
          <tr class="table-primary">
         
            <th>Email</th>
            <th>First name</th>
            <th>Last name</th>
            <th>Address</th>
            <th>Email verified</th>
            <th>Cart</th>
            <th>Cart Value</th>
            <th>Order</th>
            <th>Dispatched</th>
            <th>Cancelled</th>
          </tr>
        </thead>

        <tbody>

          {{#each users}}
          <tr>
            <td>{{this.email}}</td>
            <td>{{this.firstname}}</td>
            <td>{{this.lastname}}</td>
            <td>{{this.street}},{{this.landmark}},<br>{{this.city}}{{this.state}}</td>
            <td>{{this.isEmailVerified}}</td>
            <td>{{this.cart.length}}</td>
            <td>{{this.cartValue}}$</td>
            <td>{{this.orders.length}}</td>
            <td>0</td>
            <td>0</td>
          
          </tr>
          {{/each}}

        </tbody>
      </table>

    </div>
