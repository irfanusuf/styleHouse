<div class="modal-dialog modal-lg">
  <div class="modal-content">

    <div class="modal-header">
      <h4 class="modal-title">Edit Product</h4>
      <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
    </div>

    <div class="modal-body">

      <form method="post" action="/product/edit/{{this._id}}" enctype="multipart/form-data">
        <div class="mb-3 mt-3">

          <label for="name" class="form-label"> Product Name :</label>
          <input
            type="text"
            class="form-control"
            placeholder="Enter Name"
            name="name"
            value="{{name}}"
          />
        </div>

        <div class="mb-3 mt-3">

          <label for="category" class="form-label"> Add Category:</label>

          <select name="category" class="form-control"  >
            <option value={{this.category}}>  {{this.category}}</option>
            <option value="Men">Men</option>
            <option value="Women">Women</option>
            <option value="Kids"> Kids</option>
            <option value="Accessories & Shoes">Accessories and Shoes</option>
          </select>
        
        </div>

        <div class="mb-3 mt-3">

          <label for="subCategory" class="form-label"> Add Sub-Category:</label>
          <input
            type="text"
            class="form-control"
            placeholder="Add Sub Category"
            name="subCategory"
            value="{{this.subCategory}}"
          />
        </div>

        <div class="mb-3 d-flex">

          <div class="me-3">
            <label for="searchTag" class="form-label"> Search Tag </label>
            <input
              type="text"
              class="form-control me-3"
              placeholder="Product Size"
              name="searchTag"
              value="{{this.searchTag}}"
            />
          </div>

           <div class="me-3">
            <label for="size" class="form-label"> Add size </label>
            <input
              type="text"
              class="form-control me-3"
              placeholder="Product Size"
              name="size"
              value="{{this.size}}"
            />
          </div>

          <div>
            <label for="color" class="form-label"> Add Color </label>
            <input
              type="text"
              class="form-control"
              placeholder="Product Color"
              name="color"
              value="{{this.color}}"
            />
          </div>

        </div>

        <div class="d-flex">

          <div class="me-3">
            <label for="price" class="form-label"> Add Price:</label>
            <input
              type="number"
              class="form-control me-3"
              placeholder="Add Price"
              name="price"
              value="{{this.price}}"
            />
          </div>
          <div class="me-3">
            <label for="discount" class="form-label"> Add Discount:</label>
            <input
              type="number"
              class="form-control"
              placeholder="Add Discount "
              name="discount"
              value="{{this.discount}}"
            />
          </div>

          <div>
            <label for="itemQty" class="form-label"> Add Qunatity:</label>
            <input
              type="number"
              class="form-control"
              placeholder="Add Quantity "
              name="itemQty"
              value="{{this.itemQty}}"
            />

          </div>

        </div>

        <div class="mt-3">

          <label for="description" class="form-label"> Add Description of the product!</label>
          <textarea type="text" class="form-control me-3" name="description" >{{this.description}}</textarea>

        </div>

        {{!-- <div class="mb-3 mt-3">

          <label for="image" class="form-label"> Select Image:</label>
          <input
            type="file"
            class="form-control"
            placeholder="Select Image"
            name="image"
            accept="image/*"
          />
        </div> --}}

        <button type="submit" class="btn btn-primary"> Update The Product </button>
      </form>

    </div>

  </div>
</div>