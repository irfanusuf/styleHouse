<div class="container-fluid p-5 table-responsive mt-5">
  <div class="h1"> Orders </div>
  <table class="table table-striped table-bordered table-hover table-responsive-sm">
    <thead>
      <tr class="table-primary">

        <th>Order of</th>
        <th>Order For</th>
        <th>Value</th>
        <th>Order Date</th>
        <th>Address</th>
        <th>Email verified</th>
        <th>Payment Done</th>
        <th> Request Cancel</th>
        <th> Refunded</th>
        <th>Status</th>
        <th>Action</th>
      </tr>
    </thead>

    <tbody>

      {{#each orders}}
      <tr>
        <td>{{this.user.email}}</td>
        <td>

          {{#each this.products}}
          <ul>

            <li>
              {{this.productId.name}}, {{this.color}} , {{this.size}}
            </li>
            <li>
              Quantity:
              {{this.quantity}}no.s
            </li>

            <li>
              Price:
              {{this.price}}$
            </li>


          </ul>

          {{/each}}
        </td>
        <td>{{this.totalAmount}}$</td>
        <td>{{this.orderDate}}</td>
        <td>
          {{#each this.address}}
          {{this.fullname}}<br />{{this.street}}<br />{{this.city}} ,{{this.postalCode}}<br />{{this.state}}
          <br />{{this.country}} <br /> {{this.contact}}
          {{/each}}
        </td>
        <td>{{this.emailVerified}}</td>
        <td>{{this.isPaymentDone}}</td>
        <td>{{this.cancelRequest}}</td>
        <td>{{this.refunded}}</td>
        <td>{{this.status}}</td>

        <td>
          <div class="d-flex">
            <a class="btn btn-outline-danger me-3" href="/order/delete/{{this._id}}">
              Cancel
              & Delete
            </a>
            <a class="btn btn-outline-primary" href="/order/dispatch/{{this._id}}">
              Dispatch
            </a>
          </div>

        </td>
      </tr>
      {{/each}}

    </tbody>
  </table>

</div>