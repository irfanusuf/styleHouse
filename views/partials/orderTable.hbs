<div class="container table-responsive mt-5">
  <div class="h1"> Orders </div>
  <table
    class="table table-striped table-bordered table-hover table-responsive-sm"
  >
    <thead>
      <tr class="table-primary">

        <th>Order of</th>
        <th>Order For</th>
        <th>Total Amount</th>
        <th>Order Date</th>
        <th>Shipping Time</th>

        <th>Status</th>
        <th>Action</th>
      </tr>
    </thead>

    <tbody>

      {{#each orders}}
        <tr>
          <td>{{this.user.email}}</td>
          <td>
            <ul>
              {{#each this.products}}
                <li>
                  Name:
                  {{this.productId.name}}
                 </li>
                <li>
                  Quantity:
                  {{this.quantity}}no.s
                </li>
                  
                  <li>
                     Price:
                  {{this.price}}$
                  </li>
                 
              
              {{/each}}
            </ul>
          </td>
          <td>{{this.totalAmount}}</td>
          <td>{{this.orderDate}}</td>
          <td>{{this.shippingTime}}</td>
          <td>{{this.status}}</td>

          <td>
            <div>
              <a class="btn btn-outline-primary" href="/admin/order/dispatch/{{this._id}}">
                Dispatch 
              </a>
            </div>

          </td>
        </tr>
      {{/each}}

    </tbody>
  </table>

</div>