<div class="container table-responsive mt-5">
  <div class="h1"> Orders </div>
  <table
    class="table table-striped table-bordered table-hover table-responsive-sm"
  >
    <thead>
      <tr class="table-primary">

        <th>Order of</th>
        <th>Order For</th>
        <th>Total Amount</th>
        <th>Order Date</th>
        <th>Shipping Time</th>
        <th>Status</th>
        <th>Action</th>
      </tr>
    </thead>

    <tbody>

      {{#each orders}}
        <tr>
          <td>{{this.user.email}}</td>
          <td>

               {{#each this.products}}
            <ul>
           
                <li>
                  Name:
                  {{this.productId.name}}, {{this.color}} , {{this.size}}
                 </li>
                <li>
                  Quantity:
                  {{this.quantity}}no.s
                </li>
                  
                  <li>
                     Price:
                  {{this.price}}$
                  </li>
                 
             
            </ul>

             {{/each}}
          </td>
          <td>{{this.totalAmount}}$</td>
          <td>{{this.orderDate}}</td>
          <td>{{this.shippingTime}}</td>
          <td>{{this.status}}</td>

          <td>
            <div class="d-flex">
              <a class="btn btn-outline-danger me-3" href="/order/delete/{{this._id}}">
                Cancel 
                & Delete
              </a>
               <a class="btn btn-outline-primary" href="/order/dispatch/{{this._id}}">
                Dispatch 
              </a>
            </div>

          </td>
        </tr>
      {{/each}}

    </tbody>
  </table>

</div>