



<div class="container table-responsive mt-5">
      <div class="h1"> Orders </div>
      <table
        class="table table-striped table-bordered table-hover  table-responsive-sm"
      >
        <thead>
          <tr class="table-primary">
         
            <th>Order of</th>
            <th>Order For</th>
            <th>Total Amount</th>
            <th>Order Date</th>
            <th>Status</th>
          </tr>
        </thead>

        <tbody>

          {{#each orders}}
          <tr>
            <td>{{this.user}}</td>
            <td>{{this.products}}</td>
            <td>{{this.totalAmount}}</td>
            <td>{{this.status}}</td>
          
          
            <td>
              <div>
                <a class="btn btn-outline-primary" href="/user/edit/{{this._id}}"> Dispatch Order </a>
              </div>

            </td>
          </tr>
          {{/each}}

        </tbody>
      </table>

    </div>
