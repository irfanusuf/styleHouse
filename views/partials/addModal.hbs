<div class="modal-dialog modal-lg">
  <div class="modal-content">

    <div class="modal-header">
      <h4 class="modal-title">Add Product</h4>
      <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
    </div>

    <div class="modal-body">

      <form method="post" action="/product/add" enctype="multipart/form-data">
        <div class="mb-3 mt-3">

          <label for="name" class="form-label"> Product Name :</label>
          <input
            type="text"
            class="form-control"
            placeholder="Enter Name"
            name="name"
          />
        </div>

        <div class="mb-3 mt-3">

          <label for="category" class="form-label"> Add Category:</label>

          <select name="category" class="form-control">
            <option value="other"> Select from below</option>
            <option value="Men">Men</option>
            <option value="Women">Women</option>
            <option value="Kids"> Kids</option>
            <option value="Accessories & Shoes">Accessories and Shoes</option>
          </select>
        
        </div>

        <div class="mb-3 mt-3">

          <label for="searchTag" class="form-label"> Add Sub-Category:</label>
          <input
            type="text"
            class="form-control"
            placeholder="Add Sub Category"
            name="searchTag"
          />
        </div>

        <div class="mb-3 d-flex">

          <div class="me-3">
            <label class="form-label"> Add size </label>
            <input
              type="text"
              class="form-control me-3"
              placeholder="Product Size"
              name="size"
            />
          </div>

          <div>
            <label class="form-label"> Add Color </label>
            <input
              type="text"
              class="form-control"
              placeholder="Product Color"
              name="color"
            />
          </div>

        </div>

        <div class="d-flex">

          <div class="me-3">
            <label class="form-label"> Add Price:</label>
            <input
              type="number"
              class="form-control me-3"
              placeholder="Add Price"
              name="price"
            />
          </div>
          <div class="me-3">
            <label class="form-label"> Add Discount:</label>
            <input
              type="number"
              class="form-control"
              placeholder="Add Discount "
              name="discount"
            />
          </div>

          <div>
            <label class="form-label"> Add Qunatity:</label>
            <input
              type="number"
              class="form-control"
              placeholder="Add Quantity "
              name="itemQty"
            />

          </div>

        </div>

        <div class="mt-3">

          <label class="form-label"> Add Description of the product!</label>
          <textarea type="text" class="form-control me-3" name="description">Add description of the product!</textarea>

        </div>

        <div class="mb-3 mt-3">

          <label for="image" class="form-label"> Select Image:</label>
          <input
            type="file"
            class="form-control"
            placeholder="Select Image"
            name="image"
            accept="image/*"
          />
        </div>

        <button type="submit" class="btn btn-primary"> Add Product </button>
      </form>

    </div>

  </div>
</div>