{{> adminNav}}


{{#if true}}

<div class="container-fluid  ps-5 pe-5 mt-3">
  <div class=" alert alert-danger alert-dismissible">
    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    <strong> Some of the products are near out of Stock . kindly check the physical stock! </strong>
  </div>

</div>


{{/if}}

<div class="container-fluid ps-5 mt-3">
  <button type="button" class="btn btn-success" data-bs-toggle="modal" data-bs-target="#addBookModal">
    Add Product
  </button>

  <div class="h3 mb-3 text-center">Currently Available Products </div>

  <div class="modal" id="addBookModal">
    {{> addModal}}
  </div>

</div>

<div class="container-fluid ps-5 pe-5 mb-5 table-responsive ">


  <table class="table table-striped table-bordered table-hover  table-responsive-sm">

    <thead>
      <tr class="table-primary">

        <th> Produtc Name </th>
        <th> Category</th>
        <th> Sub Category</th>
        <th> Search Tag </th>
        <th> Size</th>
        <th> color</th>
        <th> Price</th>
        <th> Discount</th>
        <th> Item Qty. </th>
        <th> Description</th>
        <th> Image </th>
        <th>Rating</th>
        <th>Review</th>
        <th> Action </th>


      </tr>

    </thead>

    <tbody>

      {{#each products}}

      <div class="modal" id="editModal-{{this._id}}">
        {{> editModal}}
      </div>

      <!-- The Modal -->
      <div class="modal" id="delModal-{{this._id}}">
        {{> deleteModal}}
      </div>

      <tr>

        <td> {{this.name}} </td>
        <td> {{this.category}} </td>
        <td> {{this.subCategory}} </td>
        <td> {{this.searchTag}} </td>
        <td> {{this.size}} </td>
        <td> {{this.color}} </td>
        <td> {{this.price}}$</td>
        <td> {{this.discount}}% </td>
        <td> {{this.itemQty}} no.s </td>
        <td> {{this.description}}</td>
        <td> <img width="50px" src={{this.imageUrl}} alt="no-image" /> </td>
        <th>{{this.rating}}</th>
        <th>{{this.reviews.length}}</th>
        <td class="d-flex">

          <button type="button" class="btn btn-success me-3" data-bs-toggle="modal"
            data-bs-target="#editModal-{{this._id}}">
            Edit
          </button>

          <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#delModal-{{this._id}}">
            Delete
          </button>

        </td>

      </tr>

      {{/each}}

    </tbody>

  </table>

</div>