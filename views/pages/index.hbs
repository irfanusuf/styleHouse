    <!-- Hero Section with Slideshow -->
    <section class="hero">
      <div class="slideshow-container">
        <div class="slide fade">
          <img
            src="/assets/hero-background.jpg"
            alt="Hero Image 1"
            class="slide-image"
          />
          <div class="hero-content">
            <h1>Welcome to Style House</h1>
            <p>Discover the latest trends in fashion at unbeatable prices. Shop
              now and save big!</p>
            <a href="shop.html" class="btn-hero">Shop Now</a>
          </div>
        </div>
        <div class="slide fade">
          <img
            src="/assets/discount.jpg"
            alt="Hero Image 2"
            class="slide-image"
          />
          <div class="hero-content">
            <h1>Exclusive Discounts</h1>
            <p>Enjoy up to 50% off on selected items. Don't miss out on our
              special offers!</p>
            <a href="shop.html" class="btn-hero">Shop Now</a>
          </div>
        </div>

        <!-- Navigation buttons -->
        <a class="prev" onclick="plusSlides(-1)">&#10094;</a>
        <a class="next" onclick="plusSlides(1)">&#10095;</a>
      </div>

      <!-- Navigation dots -->
      <div class="dots-container">
        <span class="dot" onclick="currentSlide(1)"></span>
        <span class="dot" onclick="currentSlide(2)"></span>
